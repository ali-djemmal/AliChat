<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/circleImageSingl"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/statut_de_connexion_on"
        android:id="@+id/OnlineimageView"
        android:layout_alignTop="@+id/circleImageSingl"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="131dp" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Single"

        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginStart="33dp"
        android:layout_alignBottom="@+id/OnlineimageView"
        android:layout_toEndOf="@+id/circleImageSingl" />

    <TextView
        android:text="User default status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Status"
        android:layout_below="@+id/Single"
        android:layout_alignStart="@+id/Single" />
</RelativeLayout>